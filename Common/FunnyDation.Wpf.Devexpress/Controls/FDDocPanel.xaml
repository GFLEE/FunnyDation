<UserControl x:Class="FunnyDation.Wpf.Devexpress.Controls.FDDocPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FunnyDation.Wpf.Devexpress.Controls"
             xmlns:prism="http://prismlibrary.com/" 
             mc:Ignorable="d" 
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:DocVM />
    </UserControl.DataContext>

    <UserControl.Resources>
        <local:zStringToStringConverter x:Key="zCVT" />
    </UserControl.Resources>
    <Grid>
        <dxdo:DockLayoutManager x:Name="dlm">
            <dxdo:LayoutGroup>
                <dxdo:DocumentGroup x:Name="documentGroup"
                                    AllowClose="False"
                                    ClosePageButtonShowMode="InAllTabPageHeaders"
                                    ItemsSource="{Binding ListOfCollages}"
                                    MDIStyle="Tabbed">
                    <dxdo:DocumentGroup.ItemContentTemplate>
                        <DataTemplate>
                            <!--<dxdo:DocumentPanel  Caption="{Binding WindowName}">
                                <Grid>-->
                            <TextBlock Text="{Binding WindowContent}" />
                            <!--</Grid>
                            </dxdo:DocumentPanel>-->
                        </DataTemplate>
                    </dxdo:DocumentGroup.ItemContentTemplate>
                    <dxdo:DocumentGroup.ItemCaptionTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding WindowName}" />
                        </DataTemplate>
                    </dxdo:DocumentGroup.ItemCaptionTemplate>
                </dxdo:DocumentGroup>

            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>
    </Grid>
</UserControl>
